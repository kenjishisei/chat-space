.chat-main
  .chat-header
    .chat-header__left
      %h2
        = group.name
      %p.chat-header__users
        - group.users.each do |user|
          = user.name
    .chat-header__right
      = link_to edit_group_path(group) do
        %p.chat-header__edit-btn Edit
  .chat-body
    %ul.chat-messages
      = render "layouts/chat-messages", group: group
  .chat-footer
    = form_for ([group, message]) do |f|
      .chat-footer__body
        = f.text_area :body, placeholder: "type a message"
        .chat-footer__body__file
          = f.label :image do
            %i.fa.fa-image
      = f.submit "Send",class: "chat-footer__send-btn", "data-disable-with": "Save"
