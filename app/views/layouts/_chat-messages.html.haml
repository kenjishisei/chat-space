- group.messages.each do |message|
  %li.chat-message
    %p.chat-message__name
      = message.user.name
    %p.chat-message__time
      = message.created_at
    %p.chat-message__body
      = message.body
      - if message.image?
        %br
        %img.chat-message__image
          = image_tag message.image.to_s
